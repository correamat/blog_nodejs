<h2>Lista de Postagens:    </h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Adicionar Postagem</button>
</a>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Categoria</th>
      <th scope="col">Titulo</th>
      <th scope="col">Descrição</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each postagens}}
        <tr>
            <td>{{data}}</td>
            <td>{{categoria.nome}}</td>
            <td>{{titulo}}</td>
            <td>{{descricao}}</td>
            <td>
              <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary mb-2">Editar</button></a>
              <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mb-2">Excluir</button></a>
            </td>
        </tr>
    {{else}}
      <tr>
        <td colspan="4">Nenhuma categoria registrada.</td>
      </tr>
    {{/each}}
  </tbody>
</table>